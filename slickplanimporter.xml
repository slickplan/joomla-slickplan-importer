<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
    <name>Slickplan Importer</name>
    <author>Slickplan.com</author>
    <authorUrl>http://slickplan.com/</authorUrl>
	<license>GPL-3.0</license>
    <version>2.1.2</version>
    <description>Quickly import your Slickplan project into your Joomla! site.</description>
    <administration>
        <menu>COM_SLICKPLANIMPORTER</menu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>slickplanimporter.php</filename>
            <filename>slickplan-importer.php</filename>
			<folder>views</folder>
        </files>
        <languages folder="language">
            <language tag="en-GB">admin/en-GB/en-GB.com_slickplanimporter.sys.ini</language>
        </languages>
    </administration>
</extension>
